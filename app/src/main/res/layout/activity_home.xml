<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/banksButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Banks"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintBottom_toTopOf="@+id/cardsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cardsButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:text="Cards"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintBottom_toTopOf="@+id/policiesButton"
        app:layout_constraintEnd_toEndOf="@+id/banksButton"
        app:layout_constraintStart_toStartOf="@+id/banksButton"
        app:layout_constraintTop_toBottomOf="@+id/banksButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/policiesButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:text="Policies"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintBottom_toTopOf="@+id/aadharButton"
        app:layout_constraintEnd_toEndOf="@+id/cardsButton"
        app:layout_constraintStart_toStartOf="@+id/cardsButton"
        app:layout_constraintTop_toBottomOf="@+id/cardsButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/aadharButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:text="Aadhar"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/policiesButton"
        app:layout_constraintStart_toStartOf="@+id/policiesButton"
        app:layout_constraintTop_toBottomOf="@+id/policiesButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
